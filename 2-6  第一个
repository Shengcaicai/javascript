<script>
function myFunction()
{
    try
        {
        x=document.getElementByID（"demo"）.value
        if(x=="")        throw:"值为空"；
        if（is NaN(x)）  throw:"值不是数字"；
        if（x>10）       throw:"数太大"；
        if（x<5）        throw："数太小"；
        }

    catch（err）
        {
            y=document.getElementById("mess").innerHTML="错误："+ err +"。"
        }
}
</script>



    <h1>我的第一个 Javascript 程序.</h1>
    <p>请输入 5 到 10 之间的数字：</p>
    <input id="demo" type="text">
        <button onclick="myFunction（）">测试输入值</button>
        <p id="mess"></p>

    </body>
        </html>
